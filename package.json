{
    "name": "@rajnandan1/ellipsis",
    "version": "1.0.0",
    "description": "Compress and convert DOM snapshots to Markdown using TextRank algorithm.",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "test": "node --import tsx test/test.js",
        "playground": "npm run build && npx serve .",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "ellipsis",
        "dom",
        "snapshot",
        "html",
        "compression",
        "markdown",
        "textrank"
    ],
    "author": "Raj Nandan Sharma <rajnandan1@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/rajnandan1/ellipsis.git"
    },
    "bugs": {
        "url": "https://github.com/rajnandan1/ellipsis/issues"
    },
    "dependencies": {
        "turndown": "^7.2.0",
        "turndown-plugin-gfm": "^1.0.2"
    },
    "devDependencies": {
        "@types/turndown": "^5.0.6",
        "jsdom": "^27.4.0",
        "tsup": "^8.5.0",
        "tsx": "^4.21.0",
        "typescript": "^5.8.3"
    }
}
